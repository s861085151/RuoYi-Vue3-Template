{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.vue", "src/**/*.json"],
  "exclude": ["node_modules", "dist"]
}
